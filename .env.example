# ==============================================
# Healthtech Consultations API - Environment
# ==============================================
# Copie este arquivo para .env e ajuste os valores

# === Aplicação ===
APP_NAME="Healthtech Consultations API"
APP_VERSION="1.0.0"
DEBUG=false
HOST=0.0.0.0
PORT=8000

# === Summarizer ===
# Estratégia padrão: rule_based (determinístico) ou llm_based (com IA)
SUMMARIZER_STRATEGY=rule_based

# === LLM - Gemini ===
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# === LLM - OpenAI ===
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# === LLM - Configurações Gerais ===
LLM_TIMEOUT_SECONDS=10
LLM_MAX_RETRIES=2

# === CORS ===
# Origens permitidas (separadas por vírgula para múltiplas)
CORS_ORIGINS=["*"]
