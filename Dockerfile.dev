# ==============================================
# Healthtech Consultations API - Dockerfile Dev
# ==============================================
# Imagem para desenvolvimento com hot reload
#
# Uso:
#   docker-compose --profile dev up
# ==============================================

FROM python:3.11-slim

# Argumentos de build
ARG INSTALL_LLM=true

# Instala uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Variáveis de ambiente
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app \
    UV_LINK_MODE=copy

WORKDIR /app

# Copia arquivos de dependência
COPY pyproject.toml ./

# Cria venv e instala dependências (incluindo dev)
RUN uv venv /app/.venv && \
    . /app/.venv/bin/activate && \
    uv sync --frozen --extra dev && \
    if [ "$INSTALL_LLM" = "true" ]; then uv sync --frozen --extra llm; fi

# Adiciona venv ao PATH
ENV PATH="/app/.venv/bin:$PATH"

# Copia código fonte
COPY app ./app

# Expõe porta
EXPOSE 8000

# Comando com hot reload
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
